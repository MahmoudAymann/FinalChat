<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_singleImg_id"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/profile_img" />

    <TextView
        android:id="@+id/textView_single_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/user_singleImg_id"
        android:text="Name"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/single_user_status_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_singleImg_id"
        android:layout_alignLeft="@+id/textView_single_name_id"
        android:layout_alignStart="@+id/textView_single_name_id"
        android:layout_marginBottom="7dp"
        android:text="Status" />
</RelativeLayout>